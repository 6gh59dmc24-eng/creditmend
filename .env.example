# Database Configuration
# Use your Coolify PostgreSQL internal URL
DATABASE_URL="postgres://username:password@host:5432/database"

# Clerk Configuration
# Get these from https://dashboard.clerk.com/last-active?path=api-keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=YOUR_PUBLISHABLE_KEY
CLERK_SECRET_KEY=YOUR_SECRET_KEY

# Clerk Webhook Secret
# Get this from Clerk Dashboard > Webhooks after creating your webhook endpoint
# Required for user synchronization to database
CLERK_WEBHOOK_SECRET=YOUR_WEBHOOK_SECRET

# Email Service (Resend)
RESEND_API_KEY="your-resend-api-key"
